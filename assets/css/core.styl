		a
			color #666

.pagination
	text-align center
	margin 10px 0

	a
		background #EEE
		border-radius 3px
		padding 6px 10px
		text-align center
		text-decoration none

		&:hover
			background #DFDFDF

		&.current
			background #333!important
			color #EEE

/* Sub Content */
#sub_content
	background #FFF

	.inner
		padding 30px 0

	ul.columns
		li
			width 270px
			_width 260px
			line-height 22px
			float left
			margin-left 30px
			margin-right 20px

			&:last-child,&.last
				margin-right 0

			h2
				font-size 24px
				font-weight 400
				margin-bottom 25px

			p
				margin-bottom 10px
				color #484747

			div
				margin-bottom 10px

			div span
				color #000
				font-weight 400
				display block

			div p
				margin-bottom 0

		form.contact
			.alert
				color #EF4A4A

			input,textarea
				display block
				border 1px solid #d3d3d2
				border-radius 5px
				padding 8px
				color #cccccc
				font 14px 'Helvetica Neue', Arial
				width 250px
				margin-bottom 15px

			textarea
				height 125px

			.button
				padding 8px
				background #fbd640
				color #000
				border-radius 5px
				font-weight bold
				border 0
				width auto
				cursor pointer

/* Footer */
#footer
	margin-top 20px
	clear both

	.links
		float left

	p img
		vertical-align middle
		margin-right 10px

	p.copy
		float right
		margin-top 20px
		color #484747

	&.alt .links
		float right
		width 100px

	&.alt p.copy
		float left
		margin-top 0
