
input
	border none

	&[type=submit], &[type=button]
		background #555
		color white
		padding 10px 20px

		&:hover
			background #333
			transition-duration .3s

#cf_custom
	span.wpcf7-not-valid-tip
		left: 70%
		margin-top: 50px
		position: relative
		top: 20%

	div.wpcf7-validation-errors
		margin-top:50px

#cf_message
	resize: vertical

form
	*
		font-family: 'Sans-Serif'
		text-transform uppercase
		margin 0
		padding 0
		position static

	p
		margin-bottom 0 !important

#cf_name, #cf_email, #cf_dropdown
	height:40px

#cf_name, #cf_email, #cf_dropdown, #cf_message
	padding 6px
	margin 5px 0
	color: dark_gray
	background-color: white
	border: 3px solid gray
	box-sizing border-box
	font-weight: 900
	width: 100%

	&:focus
		border-color gold
